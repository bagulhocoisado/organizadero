{
  "name": "organizador-contas",
  "version": "40.1.20",
  "description": "Organizador de Contas - Aplicativo Desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --win --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1"
  },
  "build": {
    "appId": "com.organizador.contas",
    "productName": "Organizador de Contas",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "icon.png",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/electron-updater/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "publisherName": "Organizador"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false,
      "installerIcon": null,
      "uninstallerIcon": null
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "bagulhocoisado",
        "repo": "organizadero",
        "private": false,
        "releaseType": "release"
      }
    ]
  }
}



