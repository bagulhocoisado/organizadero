{
  "name": "organizador-contas",
  "version": "40.1.102",
  "description": "Organizador de Contas - Aplicativo Desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --win --publish always",
    "zip-unpacked": "cd dist/win-unpacked && tar -a -c -f ../win-unpacked.zip *",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.organizador.contas",
    "productName": "Organizador de Contas",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "icon.png",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "publisherName": "Organizador"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "bagulhocoisado",
        "repo": "organizadero",
        "private": false,
        "releaseType": "release"
      }
    ]
  }
}































